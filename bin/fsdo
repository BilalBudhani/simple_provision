#!/usr/bin/env ruby

require 'optparse'
require_relative '../lib/fucking_scripts_digital_ocean'

options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: fss [options] type"

  opts.on('--droplet-name NAME', 'An exiting Droplet Name' ) do |name|
    require 'byebug'; byebug
    options[:droplet_name] = name
  end

  opts.on('-h', '--help', 'Display this screen' ) do
    puts opts
    exit
  end

  opts.on('-v', '--version', 'Show version' ) do
    puts FuckingScriptsDigitalOcean::Version
  end
end.parse!

options.merge!(type: ARGV.first)

cli = FuckingScriptsDigitalOcean::CLI.new(options)
cli.configure
